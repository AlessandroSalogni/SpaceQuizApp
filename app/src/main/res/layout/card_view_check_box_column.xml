<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_card"
    style="@style/CardViewStyle"
    card_view:cardBackgroundColor="@color/card_view_check_box_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/question_photo"
            style="@style/ImageViewStyle" />

        <TextView
            android:id="@+id/question_text"
            style="@style/QuestionTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_distance"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/question_answer_1"
                style="@style/CheckBoxStyle" />

            <CheckBox
                android:id="@+id/question_answer_2"
                style="@style/CheckBoxStyle" />

            <CheckBox
                android:id="@+id/question_answer_3"
                style="@style/CheckBoxStyle" />

            <CheckBox
                android:id="@+id/question_answer_4"
                style="@style/CheckBoxStyle" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>